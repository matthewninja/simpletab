{
  "manifest_version": 2,

  "name": "Simple Tab",
  "description": "Transforms your new tab page into a beautiful and minimalistic image.\n All code is open source.",
  "version": "0.1",
  "background": {
    "scripts":["background.js"]
  },
  "icons": {"16": "img/icon16.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png" },
  "browser_action": {
  },
  // "options_page": "options.html",
  "chrome_url_overrides" : {
    "newtab": "new-tab.html"
  },
  "permissions": [
    "tabs"
  ]
}